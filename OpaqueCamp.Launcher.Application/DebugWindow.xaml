<adonisControls:AdonisWindow x:Class="OpaqueCamp.Launcher.Application.DebugWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                             Title="Debug Window" Height="450" Width="460">
    <Grid>
        <Button Content="Find Java Path" HorizontalAlignment="Left" Margin="10,10,0,0"
                VerticalAlignment="Top" Click="debugJavaButton_Click" />
        <Label x:Name="debugJavaLabel" Content="Java path:" HorizontalAlignment="Left" Margin="10,30,0,0"
               VerticalAlignment="Top" />
        <Button Content="Test AutoMaxMemory()" HorizontalAlignment="Left" Margin="10,60,0,0"
                VerticalAlignment="Top" Click="debugWMI_Click" />
        <Label x:Name="debugWMILabel" Content="Max memory:" HorizontalAlignment="Left" Margin="10,80,0,0"
               VerticalAlignment="Top" />
        <Button Content="Open CrashHandler Windows" HorizontalAlignment="Left"
                Margin="10,110,0,0" VerticalAlignment="Top" Click="debugCrashHandler_Click" />
    </Grid>
</adonisControls:AdonisWindow>