<UserControl x:Class="OpaqueCamp.Launcher.Application.OfflineAccountEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OpaqueCamp.Launcher.Application"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:AccountViewModel}">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>
        <Label Content="Имя игрока" HorizontalAlignment="Left" />
        <TextBox HorizontalAlignment="Left" Width="120" Grid.Row="1" Text="{Binding Username}" />
    </Grid>
</UserControl>