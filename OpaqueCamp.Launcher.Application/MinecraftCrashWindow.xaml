<Window x:Class="OpaqueCamp.Launcher.Application.MinecraftCrashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:super="clr-namespace:OpaqueCamp.Launcher.Application"
        xmlns:draw="clr-namespace:System.Drawing;assembly=System.Drawing"
        mc:Ignorable="d"
        Title="Minecraft завершился аварийно" Height="450" Width="500"
        ResizeMode="NoResize">
    <Window.Resources>
        <super:IconToImageSourceConverter x:Key="IconToImageSourceConverterKey"/>
    </Window.Resources>
    <Grid>
        <Image Margin="10,10,0,0" Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" IsEnabled="False" Source="/Icons/minecraft-crash.png" />
        <Label Content="Minecraft завершился аварийно" HorizontalAlignment="Left" Margin="65,17,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,65,0,0" TextWrapping="Wrap" Text="{Binding Path=JoinedLogs}" VerticalAlignment="Top"/>
        <Button Content="OK" Margin="0,0,10,10" Click="OnOkClick" HorizontalAlignment="Right" Width="73" Height="29" VerticalAlignment="Bottom" IsDefault="True" IsCancel="True"/>
    </Grid>
</Window>
