<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" x:Name="window" x:Class="OpaqueCamp.Launcher.Application.MainWindow"
        mc:Ignorable="d"
        Title="Opaque Launcher" Height="720" Width="800" MinWidth="1280" MinHeight="400">
    
    <Grid Background="#181c1f">
        
        <Rectangle x:Name="rectangle" HorizontalAlignment="Center" Height="80" VerticalAlignment="Top" Fill="#0a0b0c" Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}"/>
        <Label Content="Opaque Launcher" HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top" Foreground="White" FontSize="36" FontFamily="./Fonts/#Monocraft"/>
        <Rectangle HorizontalAlignment="Center" Height="40" VerticalAlignment="Bottom" Fill="#0a0b0c" Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}"/>

        <Button Content="Запустить" HorizontalAlignment="Left" Margin="20,20" VerticalAlignment="Bottom" Background="#0a944e" BorderBrush="#066133" Foreground="White" Padding="10,5,10,5" FontSize="24" FontFamily="./Fonts/#Monocraft">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <Label Content="__cryence_" HorizontalAlignment="Left" Margin="200,0,50,5" VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontFamily="./Fonts/#Monocraft"/>
        <Label Content="Opaque Vanilla 1.19.2" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontFamily="./Fonts/#Monocraft"/>

        <Label x:Name="debugWindowLabel" Content="Debug Window" HorizontalAlignment="Right" Margin="0,25,10,0" VerticalAlignment="Top" FontStyle="Italic" MouseDoubleClick="OpenDebugWIndow" Foreground="White" Visibility="Hidden"/>

        <Wpf:WebView2 Margin="200,80,0,39" Source="https://opaque-camp.gitbook.io/"/>
        <TextBox HorizontalAlignment="Left" Margin="141,87,0,0" TextWrapping="Wrap" Text="4096" VerticalAlignment="Top" Width="50" PreviewTextInput="NumberValidationTextBox" Background="#FF181C1F" FontSize="14" Foreground="#c5e7ff" FontFamily="./Fonts/#Monocraft" BorderBrush="#FF53616B" BorderThickness="2" Padding="2,2,0,2"/>
        <Label Content="Память (ОЗУ):" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Foreground="#c5e7ff" FontSize="14" FontFamily="./Fonts/#Monocraft"/>
        <CheckBox Content="Перекачать сборку" HorizontalAlignment="Left" Margin="10,0,0,70" VerticalAlignment="Bottom" Foreground="#c5e7ff" BorderBrush="#FF53616B" BorderThickness="2" FontSize="14" FontFamily="./Fonts/#Monocraft" Background="#FF181C1F">
            <CheckBox.Resources>
                <Style TargetType="{x:Type CheckBox}">
                    
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type CheckBox}">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                                    <Border BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Width="15" Height="15">
                                        <!--                                   needs rewrite -->
                                        <Path Stretch="Uniform" Width="15" Height="10" Fill="#c5e7ff" Name="eliCheck" Data="F1 M 9.97498,1.22334L 4.6983,9.09834L 4.52164,9.09834L 0,5.19331L 1.27664,3.52165L 4.255,6.08833L 8.33331,1.52588e-005L 9.97498,1.22334 Z " Visibility="Collapsed"/>
                                    </Border>
                                    <TextBlock Margin="5,0,0,0"  VerticalAlignment="Center" Foreground="{TemplateBinding Foreground}" Text="{TemplateBinding Content}"></TextBlock>
                                </StackPanel>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGray" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FF9C9E9F" />
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="LightGray" />
                                        <Setter Property="Foreground" Value="Gray" />
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Setter TargetName="eliCheck" Property="Opacity" Value="0.5" />
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="eliCheck" Property="Visibility" Value="Visible"></Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </CheckBox.Resources>
        </CheckBox>


    </Grid>
</Window>
