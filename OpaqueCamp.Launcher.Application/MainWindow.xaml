<Window x:Name="window" x:Class="OpaqueCamp.Launcher.Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="400" MinHeight="400">
    <Grid>
        <Rectangle x:Name="rectangle" HorizontalAlignment="Center" Height="80" VerticalAlignment="Top" Fill="Black" Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}"/>
        <Label Content="Opaque Launcher" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="36"/>
        <Rectangle HorizontalAlignment="Center" Height="40" VerticalAlignment="Bottom" Fill="Black" Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}"/>
        <Button Content="Играть" HorizontalAlignment="Center" Margin="0,20" VerticalAlignment="Bottom" Background="LightGreen" BorderBrush="Green" Foreground="White" Padding="10,1,10,1" FontSize="36"/>
        <Label Content="__cryence_" HorizontalAlignment="Left" Margin="10,0,0,5" VerticalAlignment="Bottom" Foreground="White" FontSize="14"/>
        <Label Content="Opaque Vanilla 1.19.2" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Foreground="White" FontSize="14"/>
        <Button x:Name="debugJavaButton" Content="DebugFUCKINGJava" HorizontalAlignment="Left" Margin="610,134,0,0" VerticalAlignment="Top" Click="debugJavaButton_Click"/>
        <Button x:Name="debugWMI" Content="Debug WMI SHIT" HorizontalAlignment="Left" Margin="610,169,0,0" VerticalAlignment="Top" Click="debugWMI_Click"/>

    </Grid>
</Window>
