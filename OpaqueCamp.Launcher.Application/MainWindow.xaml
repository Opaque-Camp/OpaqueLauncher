<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" x:Name="window" x:Class="OpaqueCamp.Launcher.Application.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="400" MinHeight="400">
    <Grid>
        <Rectangle x:Name="rectangle" HorizontalAlignment="Center" Height="80" VerticalAlignment="Top" Fill="Black" Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}"/>
        <Label Content="Opaque Launcher" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" Foreground="White" FontSize="36"/>
        <Rectangle HorizontalAlignment="Center" Height="40" VerticalAlignment="Bottom" Fill="Black" Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}"/>
        <Button Content="Играть" HorizontalAlignment="Left" Margin="20,20" VerticalAlignment="Bottom" Background="LightGreen" BorderBrush="Green" Foreground="White" Padding="10,1,10,1" FontSize="36" FontWeight="Bold"/>
        <Label Content="__cryence_" HorizontalAlignment="Left" Margin="180,0,50,5" VerticalAlignment="Bottom" Foreground="White" FontSize="14"/>
        <Label Content="Opaque Vanilla 1.19.2" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Foreground="White" FontSize="14"/>

        <Label x:Name="debugWindowLabel" Content="Debug Window" HorizontalAlignment="Right" Margin="0,25,10,0" VerticalAlignment="Top" FontStyle="Italic" MouseDoubleClick="OpenDebugWIndow" Foreground="White"/>


        <Wpf:WebView2 Margin="185,80,0,39" Source="https://opaque-camp.gitbook.io/"/>


    </Grid>
</Window>
